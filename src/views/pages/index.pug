                            p.overview-card__viewers 107
                        div.overview-card__container-social-networks
                            img.overview-card__social-network(src="images/icon-youtube.svg", alt="icon youtube")
                            div.overview-card__container-increase
                                img.overview-card__icon-increase(src="images/icon-down.svg", alt="decrease")
                                p.overview-card__increase.decrease 19%
